<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnakeActivity">


        <FrameLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/upBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="670dp"
                    android:layout_marginTop="175dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/baseline_arrow_drop_up_24"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/rightBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="725dp"
                    android:layout_marginTop="225dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/baseline_arrow_right_24"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/downBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="670dp"
                    android:layout_marginTop="275dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/baseline_arrow_drop_down_24"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/leftBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="615dp"
                    android:layout_marginTop="225dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/baseline_arrow_left_24"
                    tools:ignore="MissingConstraints" />


                <Button
                    android:id="@+id/resume"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="670dp"
                    android:layout_marginTop="225dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/play_arrow_24"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/pauseBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="670dp"
                    android:layout_marginTop="225dp"
                    android:background="@color/turquoise"
                    android:drawableTop="@drawable/baseline_pause_24"

                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/highScore2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="645dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/turquoise"
                    android:gravity="left"

                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/highScore"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="645dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/turquoise"
                    android:gravity="left"
                    tools:ignore="MissingConstraints" />



        </FrameLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="645dp"
            android:layout_marginTop="130dp"
            android:background="@color/turquoise"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pauseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paused"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/container"
            app:layout_constraintEnd_toEndOf="@+id/container"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/turquoise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

                <Button
                    android:id="@+id/restart"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/Cream"
                    android:text="Restart"
                     />
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>